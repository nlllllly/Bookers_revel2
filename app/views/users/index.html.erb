
    <%# 共通部品 _indexside %>
    <%= render 'layouts/indexside', book: @book, book_new: @book_new %>


        <div class="col-xs-9">
            <h2>Users</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <%# ここにUsers繰り返し  %>
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image-icon.jpg" %></td>
                            <td><%= user.name %></td> 
                            <td><%= link_to 'Show', user_path(user.id) %></td> 
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
