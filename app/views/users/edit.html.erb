<div class="container">
    <div class="row">
        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
            <div class="field">
                <label>Name</label>
                <%= f.text_field :name %>
            </div>
            <div class="field">
                <label>Image</label>
                <%= f.attachment_field :profile_image %>
            </div>
            <div class="field">
                <label>introduction</label>
                <%= f.text_area :introduction %>
            </div>    
            <div class="actions">
                <%= f.submit %>
            </div>    
        <% end %>

    </div>
</div>