<div class="container">
    <div class="row">
        <h2>User info</h2>
        <%# エラー通知表示 %>
        <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>    
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
        <%# ユーザのupdate用のフィールド %>
        <%= form_for(@user) do |f| %>
            <div class="field">
                <label>Name</label>
                <%= f.text_field :name %>
            </div>
            <div class="field">
                <label>Image</label>
                <%= f.attachment_field :profile_image %>
            </div>
            <div class="field">
                <label>introduction</label>
                <%= f.text_area :introduction %>
            </div>    
            <div class="actions">
                <%= f.submit %>
            </div>    
        <% end %>

    </div>
</div>