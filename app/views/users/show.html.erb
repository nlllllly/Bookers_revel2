
<%# 共通部品 _showside %>
<%= render 'layouts/showside', user: @user  %>


        <div class="col-xs-9">
            <h2>Books</h2>
            <%# Books一覧表示 %>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                <%# Books一覧表示 %>
                    <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to user_path(@user.id) do %>
                                    <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image-icon.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book_path(book.id) do %>
                                    <%= book.title %>
                                <% end %>
                            </td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>


        </div>
    </div>
</div>
