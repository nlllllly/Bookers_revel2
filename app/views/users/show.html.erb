<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%# ここにエラ〜メッセージの通知を出す。 %>
            
            <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
            <table class="table" >
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= current_user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= current_user.introduction %></th>
                    </tr>
                </tbody>
            </table>
        <div class="row">
            <%= link_to '', edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>

        <h2>New book</h2>
            <%# エラー表示する %>
            <%= form_for(@book) do |f| %>
                <div class="field row">
                    <%= f.label :title %>
                    <%= f.text_field :title, class:"col-xs-12 book_title" %>
                </div>
                <div class="field row">
                    <%= f.label :opinion %>
                    <%= f.text_area :body, class:"col-xs-12 book_body" %>
                </div>
                <div class="actions row">
                    <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
                </div>
            <% end %>
        </div>



        <div class="col-xs-9">
            <h2>Books</h2>
            <%# Books一覧表示 %>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                     <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to user_path do %>
                                    <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image-icon.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book_path do %>
                                    <%= book.title %>
                                <% end %>
                            </td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>


        </div>
    </div>
</div>
