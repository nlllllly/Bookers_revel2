<%# _userinfo.html.erb %>
    <h2>New book</h2>
    <%# 本作成のフォーム %>
    <div class="field_with_errors">
        <%= form_for(@book) do |f| %>
            <div class="field row">
                <label>Title</label><br>
                <%= f.text_field :title %>
            </div>
            <div class="field row">
                <label>Opinion</label><br>
                <%= f.text_area :body %>
            </div>
            <div class="actions row">
                <%= f.submit 'Create Book', class:"btn btn-info" %>
            </div>
        <% end %>
    </div>


