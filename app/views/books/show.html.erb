
<%# 共通部品 _showside %>
<%= render 'layouts/showside', user: @user %>


        <div class="col-xs-9">
            <h2>Book detail</h2>
            <%# Book詳細部分 %>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book.user_id) do %>
                                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image-icon.jpg" %>
                                <%= @book.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book.id) do %>
                                <%= @book.title %>
                            <% end %>
                        </td>
                        <td><%= @book.body %></td>
                        
                        <% if @book.user == current_user %>
                            <td>
                                <%= link_to "Edit", edit_book_path(@book.id), class:"btn-sm btn-success" %>
                            </td>
                            <td>
                                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn-sm btn-danger" %>
                            </td>
                        <% end %>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>