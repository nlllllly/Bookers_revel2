
    <%# 共通部品 _indexside %>
    <%= render 'layouts/indexside', book: @book, book_new: @book_new %>


        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <%# 本の一覧 %>
                    <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to user_path(book.user_id) do %>
                                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image-icon.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book_path(book.id) do %>
                                    <%= book.title %>
                                <% end %>
                            </td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>


